cin >> guess;

if (guess <target) {
 cout << "the number is too low! please try again. " << endl;
 else if (guess > target) {
 cout <<"the number is too high! please 
 else { try again ." << endl;
 cout << "congratulations! you guessed the number." <<endl;
 break ;
 
 
 
 
 int main () {
 int choice ;
 
 di {
 cout << "please choose [1] [2]; "<< endl;
