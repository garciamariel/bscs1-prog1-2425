#include <iostream>

using namespace std;

int main() {

    string stringText = "Jhondean"; 
    int intNum = 22;
    float floatNum = 1.5;
    double doubleNum = 1.75;
    char charLetter = 'J';
    bool boolValue = false;

    cout << "Name:" << stringText << endl;
    cout << "Age:" << intNum << endl;
    cout << "Coke:" << floatNum << endl;
    cout << "Sprite:" << doubleNum << endl;
    cout << "1st Letter:" << charLetter << endl;
    cout << "Human?" << boolValue << endl;

    return 0;

}

